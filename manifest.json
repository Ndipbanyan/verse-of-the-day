{
	"manifest_version": 3,
	"name": "verse of the day",
	"version": "1.0.0",
	"description": "This replaces a new tab on chrome with a verse of the day",
	"action": {},

	"icons": {
		"16": "16.png",
		"32": "32.png",
		"192": "192.png"
	},

	"chrome_url_overrides": {
		"newtab": "index.html"
	},
	"host_permissions": ["*://*/*"],
	"permissions": ["storage", "unlimitedStorage", "tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"minimum_chrome_version": "88"
}
